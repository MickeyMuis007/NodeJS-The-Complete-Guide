<main>
    {{#if hasProducts}}
    <div class="grid">
        {{#each prods}}
        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title">{{ this.title }}</h1>
                <div class="card__image">
                    <img src="https://timedotcom.files.wordpress.com/2015/06/521811839-copy.jpg" alt="A Book">
                </div>
                <div class="card__content">
                    <h2 class="product">$19.99</h2>
                    <p class="product_description">A very interesting book about so many even more interestings
                        things!</p>
                </div>
                <div class="card__actions">
                    <button class="btn">Add To Cart</button>
                </div>
            </header>
        </article>
        {{/each}}
    </div>
    {{ else }}
    <h2>Has no Products!</h2>
    {{/if}}
</main>