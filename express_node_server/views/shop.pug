extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    if prods.length > 0
        each product in prods
            .grid
                article.card.product-item
                    header.card__header
                        h1.product__title #{product.title}
                    .card__image
                        img(src="https://timedotcom.files.wordpress.com/2015/06/521811839-copy.jpg", alt="A Book")
                    .card__content
                        h2.produt__price $19.99
                        p.product_description A very interesting book about so many even more interestings!
                    .card_actions
                        button.btn Add To Cart
    else
        h1 No Products